<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" type="text/css" href="/assets/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.blue-deep_purple.min.css" type="text/css"/>
    
    <!-- Bootstrap Select Picker!
        // currently uneeded
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css" type="text/css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" type="text/css">
    -->
    <link rel=icon href="/assets/prednidrone.png" sizes="128x128" type="image/png">
    <title>
      Prednidrone | https://prednidrone.redshirt.dev
    </title>
    <%- include("meta.ejs") %>
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <% if (user != undefined) { %>
                    <div class="profile">
                        <div class="avatar-profile">
                            <img class="avatar-image" src="<%= user.avatar_url %>">
                        </div>
                        <div>
                            <%= user.username %>
                        </div>
                    </div>
                <% } else { %> 
                    <div class="profile">
                        <div class="avatar-profile">
                            <i class="material-icons md-64">person</i>
                        </div>
                        <div>
                            Anonymous
                        </div>
                    </div>
                <% } %>
                </div>
                <div class="list-group list-group-flush">
                    <% if (user) { %>
                        <a href="/logout" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">exit_to_app</i> Log Out</a>
                    <% } else {%>
                        <a href="/login" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">vpn_key</i> Log in with Discord</a>
                    <% } %>
                    <% if (user) { %> 
                        <!-- Shows for everyone -->
                        <a href="/" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">attach_money</i> Spoonbank UI </a>
                        <!-- Requires roles -->
                        <% if (user.role_id > 0) { %>
                            <a href="/host" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">dns</i> Host Things</a>
                        <% } %>
                        <% if (user.role_id > 1) { %>
                            <a href="/mod" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">dashboard</i> Mod Things</a>
                        <% } %>
                        <% if (user.role_id > 2) { %>
                            <a href="/admin" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">view_agenda</i> Admin Things</a>
                        <% } %>
                        <!-- This exists -->
                        <% if (user.ss == true) { %>
                            <a href="/ss" class="list-group-item list-group-item-action bg-light"> <i class="material-icons md-18 center-me">vibration</i> Shallow's Services</a>
                        <% } %>
                    <% } %>
                </div>
        </div>
        <!-- /#sidebar-wrapper -->

            <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar-light bg-light border-bottom">
            <button class="btn" id="menu-toggle"><i class="material-icons">menu</i></button>
            <div class="icon-container"> <img src="/assets/prednidrone.png" class="header-icon"> </div> <span class="page-header"> Prednidrone </span>

            </nav>

            <div class="container-fluid">
                <%- include(page) %>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->


    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
        
</body>
</html>